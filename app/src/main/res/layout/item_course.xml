<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/thumbnail_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/course_thumbnail_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Course thumbnail"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Lock Icon for Private Courses -->
            <ImageView
                android:id="@+id/private_course_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start|top"
                android:layout_margin="8dp"
                android:background="@drawable/bg_lock_icon"
                android:contentDescription="Private Course"
                android:padding="4dp"
                android:src="@android:drawable/ic_lock_lock"
                android:visibility="gone"
                app:tint="@android:color/white" />

        </FrameLayout>

        <!-- Category Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/course_category_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Art" />

        <TextView
            android:id="@+id/course_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail_container"
            tools:text="Course Title" />

        <!-- Access Code Section (For My Courses only) -->
        <LinearLayout
            android:id="@+id/access_code_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_access_code"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_title_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Access Code: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/access_code_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textIsSelectable="true"
                tools:text="123456789" />

            <ImageButton
                android:id="@+id/copy_code_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy Access Code"
                android:src="@android:drawable/ic_menu_set_as" />
        </LinearLayout>

        <TextView
            android:id="@+id/course_description_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/access_code_container"
            tools:text="Course description text goes here. This is a short description of what the course is about." />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_description_tv">

            <TextView
                android:id="@+id/course_uploader_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                tools:text="By: Username" />

            <ImageButton
                android:id="@+id/edit_course_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Edit course"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:src="@android:drawable/ic_menu_edit"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/delete_course_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Delete course"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete"
                android:visibility="gone"
                app:tint="@color/red" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>